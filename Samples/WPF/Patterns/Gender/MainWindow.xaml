<Window 
  x:Class="GenderApp.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  Title="Gender Sample" 
  SizeToContent="WidthAndHeight"
  MinWidth="400"
  Loaded="Window_Loaded">
  <StackPanel x:Name="panel">
    <Grid x:Uid="maleGrid">
      <Label x:Name="maleLabel">dummy</Label>
      <Label x:Name="maleInfo" HorizontalAlignment="Right">dummy</Label>
    </Grid>
    <Grid x:Uid="femaleGrid">
      <Label x:Name="femaleLabel">dummy</Label>
      <Label x:Name="femaleInfo" HorizontalAlignment="Right">dummy</Label>
    </Grid>
    <Grid x:Uid="neutralGrid">
      <Label x:Name="neutralLabel">dummy</Label>
      <Label x:Name="neutralInfo" HorizontalAlignment="Right">dummy</Label>
    </Grid>
  </StackPanel>
</Window>
